<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="CircularIndicator">

        <attr name="duration" format="integer" />
        <attr name="indicatorColor" format="color" />
        <attr name="loadingColor" format="color" />

        <!--defines the width of the stroke-->
        <attr name="indicatorWidth" format="float" />

        <attr name="visibility" format="enum">

            <enum name="gone" value="8"/>
            <enum name="invisible" value="4" />
            <enum name="visible" value="0" />

        </attr>

    </declare-styleable>

</resources>