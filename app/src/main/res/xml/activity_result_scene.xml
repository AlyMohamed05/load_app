<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="1000">

        <KeyFrameSet>


        </KeyFrameSet>

    </Transition>

    <ConstraintSet android:id="@+id/start">


        <Constraint
            android:id="@+id/file_name_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:alpha="0"
            motion:layout_constraintBottom_toBottomOf="@+id/textView5"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toEndOf="@+id/textView5"
            motion:layout_constraintTop_toTopOf="@+id/textView5" />

        <Constraint
            android:id="@+id/status_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:alpha="0"
            motion:layout_constraintBottom_toBottomOf="@+id/textView6"
            motion:layout_constraintStart_toEndOf="@+id/textView6"
            motion:layout_constraintTop_toTopOf="@+id/textView6" />

    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">


        <Constraint
            android:id="@+id/file_name_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:alpha="1"
            motion:layout_constraintBottom_toBottomOf="@+id/textView5"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toEndOf="@+id/textView5"
            motion:layout_constraintTop_toTopOf="@+id/textView5" />

        <Constraint
            android:id="@+id/status_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:alpha="1"
            motion:layout_constraintBottom_toBottomOf="@+id/textView6"
            motion:layout_constraintStart_toEndOf="@+id/textView6"
            motion:layout_constraintTop_toTopOf="@+id/textView6" />

    </ConstraintSet>

</MotionScene>